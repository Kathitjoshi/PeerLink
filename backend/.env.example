# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_NAME=P2P Tutoring Scheduler
APP_VERSION=1.0.0
APP_DESCRIPTION=Peer-to-Peer Learning Scheduler Platform

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=p2p_tutoring
DB_USER=postgres
DB_PASSWORD=yourpasswordhere

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=yourjwtsecret
JWT_EXPIRE=7d

# ============================================
# EMAIL CONFIGURATION
# ============================================
# IMPORTANT: Use Gmail App Password (16 characters, no spaces)
# Get it from: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=email@gmail.com
SMTP_PASSWORD=app_password
EMAIL_FROM=P2P Tutoring <noreply@p2ptutoring.com>


